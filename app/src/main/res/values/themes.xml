<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <bool name="lightNavEnabled">true</bool>

    <style name="Theme.MoneyTracking" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorAccent">@color/blue_500</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/surface</item>
        <item name="android:windowLightStatusBar" >@bool/lightNavEnabled</item>
        <item name="android:navigationBarColor" >@color/surface</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">@bool/lightNavEnabled
        </item>
    </style>
</resources>